# Define adaptive wait function
FUNCTION AdaptiveWait
    PARAMETERS waitTime
    
    IF %adaptiveWaitEnabled%
        SET adjustedWaitTime TO %waitTime% * %currentAdaptiveMultiplier%
        WAIT %adjustedWaitTime%
    ELSE
        WAIT %waitTime%
    END IF
END FUNCTION

# Define system resource check function
FUNCTION CheckSystemResources
    # Get current time
    SET currentTime TO %CURRENT TIME IN SECONDS%
    
    # Only check periodically to avoid overhead
    IF %currentTime% - %lastSystemLoadCheck% >= %systemLoadCheckInterval%
        SET lastSystemLoadCheck TO %currentTime%
        
        # Get available memory
        GET SYSTEM AVAILABLE MEMORY IN MB STORE RESULT IN availableMemory
        
        # Log current system state
        APPEND TEXT "System check: Available memory: %availableMemory% MB\r\n" TO FILE "%logFilePath%"
        
        # Adjust wait multiplier based on available memory
        IF %availableMemory% < %lowMemoryThreshold%
            # Increase wait times when memory is low
            SET currentAdaptiveMultiplier TO %maxAdaptiveWaitMultiplier%
            APPEND TEXT "Low memory detected (%availableMemory% MB). Increasing wait times.\r\n" TO FILE "%logFilePath%"
        ELSE
            # Gradually decrease multiplier when system has resources
            SET currentAdaptiveMultiplier TO MAX(1.0, %currentAdaptiveMultiplier% * 0.9)
        END IF
    END IF
END FUNCTION

